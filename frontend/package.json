{
    "description": "SKLINET Next.js Strapi boilerplate",
    "repository": {
        "type": "git",
        "url": "https://github.com/SKLINET/strapi-boilerplate"
    },
    "license": "MIT",
    "scripts": {
        "build": "env-cmd --silent graphql-codegen  --config codegen.yml && npm run relay && NODE_ENV=production next build",
        "dev": "next dev",
        "generate-models": "node ./scripts/generateModels.js",
        "export": "NODE_ENV=production next export",
        "create-blocks": " node ./scripts/createBlocks.js && npm run relay",
        "graphql-codegen": "env-cmd -f .env graphql-codegen --config codegen.yml",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "relay": "node_modules/relay-compiler/cli.js",
        "relay:watch": "node_modules/relay-compiler/cli.js --watch",
        "start": "NODE_ENV=production next start"
    },
    "engines": {
        "node": ">=16.13.0 <=20.x.x"
    },
    "dependencies": {
        "@cloudinary/url-gen": "^1.21.0",
        "@elastic/elasticsearch": "^8.10.0",
        "@formatjs/intl-localematcher": "^0.5.2",
        "@hookform/resolvers": "^3.3.2",
        "@next/third-parties": "^15.3.5",
        "@react-google-maps/api": "^2.19.2",
        "axios": "^1.6.2",
        "busboy": "^1.6.0",
        "clsx": "^2.0.0",
        "dangerously-set-html-content": "^1.1.0",
        "dayjs": "^1.11.10",
        "dotenv-webpack": "^8.0.1",
        "graphql": "^16.8.1",
        "html-react-parser": "^5.0.6",
        "http-proxy": "^1.18.1",
        "iron-session": "^8.0.1",
        "negotiator": "^0.6.3",
        "next": "^15.3.5",
        "nextjs-progressbar": "0.0.16",
        "nextjs-toploader": "^1.6.12",
        "nodemailer": "^6.7.5",
        "nprogress": "^0.2.0",
        "react": "^18.2.0",
        "react-18-image-lightbox": "^5.1.4",
        "react-countup": "^6.5.3",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.48.2",
        "react-relay": "^16.0.0",
        "react-remove-scroll": "^2.6.0",
        "react-responsive-carousel": "^3.2.23",
        "react-share": "^5.0.3",
        "relay-runtime": "^16.0.0",
        "swr": "^2.2.4",
        "uuid": "^9.0.1",
        "yup": "^1.3.2"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^6.0.0",
        "@graphql-codegen/cli": "^5.0.0",
        "@graphql-codegen/introspection": "4.0.0",
        "@graphql-codegen/schema-ast": "^4.0.0",
        "@next/bundle-analyzer": "^15.3.5",
        "@svgr/webpack": "^8.1.0",
        "@types/busboy": "^1.5.3",
        "@types/http-proxy": "^1.17.9",
        "@types/negotiator": "^0.6.3",
        "@types/node": "^20.9.4",
        "@types/nodemailer": "^6.4.4",
        "@types/nprogress": "^0.2.3",
        "@types/react": "^18.2.38",
        "@types/react-dom": "^18.2.17",
        "@types/react-relay": "^16.0.4",
        "@types/relay-runtime": "^14.1.19",
        "@types/uuid": "^9.0.7",
        "@types/yup": "^0.32.0",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "@welldone-software/why-did-you-render": "^7.0.1",
        "autoprefixer": "^10.4.16",
        "cssnano": "^7.0.6",
        "dotenv": "^16.3.1",
        "env-cmd": "^10.1.0",
        "eslint": "^8.54.0",
        "eslint-config-next": "^15.3.5",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react": "^7.33.2",
        "lint-staged": "^15.1.0",
        "postcss": "^8.4.31",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-import": "^16.1.0",
        "postcss-preset-env": "^10.0.3",
        "prettier": "^3.1.0",
        "relay-compiler": "^16.0.0",
        "relay-compiler-language-typescript": "^15.0.1",
        "relay-config": "^12.0.1",
        "sass": "^1.69.5",
        "sass-loader": "^13.2.2",
        "tailwindcss": "^3.3.5",
        "typescript": "^5.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "prettier": {
        "semi": true,
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "next",
            "next/core-web-vitals",
            "plugin:prettier/recommended"
        ],
        "rules": {
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/no-unused-vars": "off"
        }
    }
}
