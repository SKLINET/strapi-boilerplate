{
  "collectionName": "components_block_test_blocks",
  "info": {
    "displayName": "Test",
    "icon": "allergies",
    "description": ""
  },
  "options": {},
  "attributes": {
    "testText": {
      "type": "string"
    },
    "testComponent": {
      "displayName": "TestComponent",
      "type": "component",
      "repeatable": true,
      "component": "complementary.test-component"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "article": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::article.article"
    },
    "button": {
      "type": "component",
      "repeatable": false,
      "component": "complementary.button"
    },
    "formattedTitle": {
      "type": "customField",
      "options": {
        "output": "html"
      },
      "customField": "plugin::bold-title-editor.title"
    },
    "color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
